<!--pages/courseDetail/courseDetail.wxml-->
<view class="container">
  <view class="bigTitle">Available List</view>
  <view class="list">
    <van-tabs sticky animated bind:change="changeTabs" line-width="18px">
      <van-tab title="morning">
        <view class="morningCnt">
          <van-checkbox-group value="{{ quan1 }}" bind:change="onChangeCheckbox1">
            <van-cell-group>
              <van-cell
                wx:for="{{ result1 }}"
                wx:key="index"
                value-class="value-class"
                clickable  
                data-index="{{ index }}"
                bind:click="toggle1"
              >
              <view slot="title">
                <view class="date">{{item.time}}        {{item.duringTime}}</view>
                <view class="numBox">
                  <view class="price">￡{{item.price*discount-2}} per {{item.unit}}</view>
                  <view><text>Available: </text>{{item.remainNum}}</view>
                  <view><text>Total :</text>{{item.num}}</view>
                </view>
              </view>
                <van-checkbox
                  catch:tap="noop"
                  class="checkboxesOne-{{ index }}"
                  name="{{ index }}"
                  disabled="{{item.remainNum==0}}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </van-tab>
      <van-tab title="afternoon">
        <view class="afternoonCnt">
          <van-checkbox-group value="{{ quan2 }}" bind:change="onChangeCheckbox2">
            <van-cell-group>
              <van-cell
                wx:for="{{ result2 }}"
                wx:key="index"
                value-class="value-class"
                clickable
                data-index="{{ index }}"
                bind:click="toggle2"
              >
              <view slot="title">
                <view class="date">{{item.time}}        {{item.duringTime}}</view>
                <view class="numBox">
                  <view class="price">￡{{item.price*discount-2}} per {{item.unit}}</view>
                  <view><text>Available: </text>{{item.remainNum}}</view>
                  <view><text>Total :</text>{{item.num}}</view>
                </view>
              </view>
                <van-checkbox
                  catch:tap="noop"
                  class="checkboxesTwo-{{ index }}"
                  name="{{ index }}"
                  disabled="{{item.remainNum==0}}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </van-tab>
      <van-tab title="night">
        <view class="nightCnt">
          <van-checkbox-group value="{{ quan3 }}" bind:change="onChangeCheckbox3">
            <van-cell-group>
              <van-cell
                wx:for="{{ result3 }}"
                wx:key="index"
                value-class="value-class"
                clickable
                data-index="{{ index }}"
                bind:click="toggle3"
              >
              <view slot="title">
                <view class="date">{{item.time}} {{item.duringTime}}</view>
                <view class="numBox">
                  <view class="price">￡{{item.price*discount-2}} per {{item.unit}}</view>
                  <view><text>Available: </text>{{item.remainNum}}</view>
                  <view><text>Total :</text>{{item.num}}</view>
                </view>
              </view>
                <van-checkbox
                  catch:tap="noop"
                  class="checkboxesThree-{{ index }}"
                  name="{{ index }}"
                  disabled="{{item.remainNum==0}}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </van-tab>
      
    </van-tabs>

    
  </view>

  <view class="peopleNumBox">
    <view class="bigTitle">Confirm reservation quantity:</view>
            <view slot="title">
              <view class="bankNum">
                <van-field
                  model:value="{{ peopleNum }}"
                  type="number"
                  placeholder="please enter person number"
                  border="{{ false }}"
                  class="bankNumInput"
                  bind:change="onChangeNum"
                />
              </view>
            </view>
  </view>



  <view class="paywayBox">
    <view class="bigTitle">Select payment method:</view>
    <view class="paywayList">
      <van-radio-group value="{{ radio }}" bind:change="onChange">
        <van-cell-group>
          <van-cell clickable data-name="1" bind:click="onClick">
            <view slot="title">
              <view class="bankNum">
              <image src='../../images/icon/visa.png'></image>
                <text>Bank</text>
                <van-field
                  model:value="{{ bankNum }}"
                  type="number"
                  placeholder="Enter correct card info"
                  border="{{ false }}"
                  class="bankNumInput"
                />
              </view>
            </view>
            <van-radio slot="right-icon" name="1" />
          </van-cell>
          <van-cell clickable data-name="2" bind:click="onClick">
            <view slot="title">
              <view class="bankNum">
              <image src='../../images/icon/pound.png'></image>
                <text>Cash</text>
                <van-field/>
              </view>
            </view>
            <van-radio slot="right-icon" name="2" />
          </van-cell>
          <van-cell clickable data-name="3" bind:click="onClick">
            <view slot="title">
              <view class="bankNum">
              <image src='../../images/icon/wechatpay.png'></image>
                <text>WeChatPay</text>
                <van-field/>
              </view>
            </view>
            <van-radio slot="right-icon" name="3" />
          </van-cell>
        </van-cell-group>
      </van-radio-group>
    </view>
  </view>
  <van-submit-bar
    price="{{ price }}"
    button-text="Reserve"
    label="Total: "
    bind:submit="payOrder"
    tip="{{ true }}"
    currency="￡"
  >
    <van-tag type="primary">Quantity:{{quantity*peopleNum}}</van-tag>
    <view slot="tip">Book two or more with 20% discount</view>
  </van-submit-bar>
  <van-dialog id="van-dialog" />
</view>