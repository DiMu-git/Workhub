.container {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}
.container .bigTitle {
  padding: 40rpx 40rpx;
  font-size: 52rpx;
  font-weight: 800;
}
.container .nmText {
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.container .nmText text {
  color: red;
}
.container .listBox {
  display: flex;
  flex-wrap: wrap;
}
.container .listBox .item {
  width: 200rpx;
  height: 300rpx;
  background-color: #ffffff;
  border: 3rpx solid #575757;
  border-radius: 10rpx;
  margin: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  color: #575757;
  font-size: 34rpx;
  font-weight: 800;
}
.container .listBox .item .price {
  font-size: 48rpx;
  color: #e74747;
}
.container .listBox .active {
  border: 3rpx solid #3F96E7;
  color: #3F96E7;
}
.container .total {
  padding: 36rpx;
  font-weight: 500;
}
.container .total text {
  color: red;
}
.container .saveContent {
  padding: 0px 36rpx;
}
.container .swiper-box {
  padding: 0px 36rpx;
  height: 350rpx;
}
.container .swiper-box .slide-image {
  width: 100%;
  height: 350rpx;
  border-radius: 26rpx;
}
.container .swiper-box .wx-swiper-dot {
  width: 6rpx;
  height: 6rpx;
  display: inline-flex;
  border-radius: 6rpx;
  background: #ffffff;
}
.container .swiper-box .wx-swiper-dot .wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}
.container .swiper-box .wx-swiper-dot-active {
  width: 24rpx;
}
