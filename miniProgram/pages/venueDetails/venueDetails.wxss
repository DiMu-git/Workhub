.container {
  font-family: Georgia, 'Times New Roman', Times, serif;
}
.container .venueDetails {
  padding: 0rpx 36rpx;
}
.container .venueDetails image {
  width: 100%;
  border-radius: 20rpx;
}
.container .venueDetails .title {
  padding: 20rpx 20rpx;
  font-size: 50rpx;
  font-weight: 800;
  text-align: center;
}
.container .venueDetails .address {
  padding: 10rpx 10rpx;
  font-size: 40rpx;
  font-weight: 500;
  text-align: center;
}
.container .van-tabs__nav {
  width: 375rpx;
}
.container .van-tabs__nav .van-tab--active {
  color: var(--themeColor);
  font-size: var(--activeFontSize);
  font-weight: 500;
}
.container .van-tabs__nav .van-tabs__line {
  background-color: var(--themeColor);
}
.container .facilityCnt {
  padding-top: 10rpx;
  border-top: 10rpx solid #F7F7F7;
}
.container .facilityCnt .infoItem {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 36rpx;
}
.container .facilityCnt .infoItem:not(:last-child) {
  border-bottom: 1px solid #E5E5E5;
}
.container .facilityCnt .infoItem .left image {
  margin: 10 10 10;
  width: 200rpx;
  height: 156rpx;
  border-radius: 20rpx;
}
.container .facilityCnt .infoItem .right {
  width: 458rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.container .facilityCnt .infoItem .right .title {
  font-size: 28rpx;
  font-weight: 600;
  padding: 5rpx 5rpx;
}
.container .facilityCnt .infoItem .right .title text {
  font-weight: 500;
}
.container .facilityCnt .infoItem .right .title .price {
  color: red;
}
.container .facilityCnt .infoItem .right .reserveBtn {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
