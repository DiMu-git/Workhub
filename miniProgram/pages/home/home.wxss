.container {
  font-family: Georgia, 'Times New Roman', Times, serif;
  background: #F7F8FA;
}
.container .van-tabs__nav {
  width: 100%;
}
.container .van-tabs__nav .van-tab--active {
  color: var(--themeColor);
  font-size: var(--activeFontSize);
  font-weight: 500;
}
.container .van-tabs__nav .van-tabs__line {
  background-color: var(--themeColor);
}
.container .tabsBox {
  position: fixed;
  top: 0rpx;
  z-index: 5;
  width: 750rpx;
}
.container .orderListBox {
  padding-top: 10rpx;
  border-top: 10rpx solid #F7F7F7;
}
.container .orderListBox .infoTitle {
  padding: 0rpx 36rpx;
  margin-top: 10rpx;
  font-weight: 700;
  font-size: 40rpx;
  display: flex;
  align-items: center;
}
.container .orderListBox .infoTitle image {
  width: 55rpx;
  height: 55rpx;
  margin-right: 10rpx;
}
.container .orderListBox .infoItem {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 36rpx;
}
.container .orderListBox .infoItem:not(:last-child) {
  border-bottom: 1px solid #E5E5E5;
}
.container .orderListBox .infoItem .left image {
  margin: 10 10 10;
  width: 200rpx;
  height: 156rpx;
  border-radius: 20rpx;
}
.container .orderListBox .infoItem .right {
  width: 458rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.container .orderListBox .infoItem .right .title {
  font-size: 28rpx;
  font-weight: 600;
  padding: 10rpx 10rpx;
}
.container .orderListBox .infoItem .right .title text {
  font-weight: 500;
}
.container .orderListBox .infoItem .right .title .price {
  color: red;
}
.container .orderListBox .infoItem .right .reserveBtn {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.container .orderListBox .noData {
  margin: 30rpx 0 0;
}
.container .orderListBox .btnBox {
  background: #fff;
  padding: 0 36rpx;
  text-align: right;
}
.container .orderListBox .btnBox:not(:last-child) {
  margin-bottom: 14rpx;
}
.container .orderListBox .btnBox .van-button--small {
  margin: 10rpx;
}
.container .divLine {
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}
