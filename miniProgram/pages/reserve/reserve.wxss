/* pages/home/home.less */
.container {
  font-family: Georgia, 'Times New Roman', Times, serif;
}
.container .search {
  padding: 20rpx 36rpx;
}
.container .search .van-search {
  padding: 0rpx;
}
.container .search .van-search__content {
  background-color: #F4F4F4;
}
.container .search .van-search__content input {
  font-size: 24rpx;
}
.container .search .van-icon-search {
  color: #A7A7A7;
  font-size: 28rpx;
}
.container .swiper-box {
  padding: 0px 36rpx;
  height: 400rpx;
}
.container .swiper-box .slide-image {
  width: 100%;
  height: 400rpx;
  border-radius: 26rpx;
}
.container .swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}
.container .swiper-box .wx-swiper-dot {
  width: 6rpx;
  height: 6rpx;
  display: inline-flex;
  border-radius: 6rpx;
  background: #ffffff;
}
.container .swiper-box .wx-swiper-dot-active {
  width: 24rpx;
}
.container .venueCnt {
  padding-top: 10rpx;
  border-top: 10rpx solid #F7F7F7;
}
.container .venueCnt .infoTitle {
  padding: 0rpx 36rpx;
  margin-top: 10rpx;
  font-weight: 700;
  font-size: 40rpx;
  display: flex;
  align-items: center;
}
.container .venueCnt .infoTitle image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.container .venueCnt .content .infoItem {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 36rpx;
}
.container .venueCnt .content .infoItem:not(:last-child) {
  border-bottom: 1px solid #E5E5E5;
}
.container .venueCnt .content .infoItem .left image {
  margin: 10 10 10;
  width: 200rpx;
  height: 156rpx;
  border-radius: 20rpx;
}
.container .venueCnt .content .infoItem .right {
  width: 458rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.container .venueCnt .content .infoItem .right .title {
  font-size: 28rpx;
  font-weight: 600;
  padding: 10rpx 10rpx;
}
.container .venueCnt .content .infoItem .right .title text {
  font-weight: 500;
}
.container .venueCnt .content .infoItem .right .title .ven {
  font-size: 38rpx;
}
