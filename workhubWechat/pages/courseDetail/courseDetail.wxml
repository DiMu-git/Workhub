<!--pages/courseDetail/courseDetail.wxml-->
<view class="container">
  <view class="bigTitle">select reserve list</view>
  <view class="list">
    <van-tabs sticky animated bind:change="changeTabs" line-width="18px">
      <van-tab title="morning">
        <view class="morningCnt">
          <van-checkbox-group value="{{ result1 }}" bind:change="onChangeCheckbox1">
            <van-cell-group>
              <van-cell
                wx:for="{{ reserveList }}"
                wx:key="index"
                value-class="value-class"
                clickable  
                data-index="{{ index }}"
                bind:click="toggle1"
              >
              <view slot="title">
                <view class="date">{{item.time}}</view>
                <view class="numBox">
                  <view class="price">￥{{item.price}}</view>
                  <view><text>surplus:</text>{{item.morningNums}}</view>
                  <view><text>total:</text>{{item.morning}}</view>
                </view>
              </view>
                <van-checkbox
                  catch:tap="noop"
                  class="checkboxesOne-{{ index }}"
                  name="{{ index }}"
                  disabled="{{item.morningNums==0}}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </van-tab>
      <van-tab title="afternoon">
        <view class="afternoonCnt">
          <van-checkbox-group value="{{ result2 }}" bind:change="onChangeCheckbox2">
            <van-cell-group>
              <van-cell
                wx:for="{{ reserveList }}"
                wx:key="index"
                value-class="value-class"
                clickable
                data-index="{{ index }}"
                bind:click="toggle2"
              >
              <view slot="title">
                <!-- <view class="van-cell-text">单元格</view> -->
                <view class="date">{{item.time}}</view>
                <view class="numBox">
                  <view class="price">￥{{item.price}}</view>
                  <view><text>surplus:</text>{{item.afternoonNums}}</view>
                  <view><text>total:</text>{{item.afternoon}}</view>
                </view>
              </view>
                <van-checkbox
                  catch:tap="noop"
                  class="checkboxesTwo-{{ index }}"
                  name="{{ index }}"
                  disabled="{{item.afternoonNums==0}}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </van-tab>
      <van-tab title="night">
        <view class="nightCnt">
          <van-checkbox-group value="{{ result3 }}" bind:change="onChangeCheckbox3">
            <van-cell-group>
              <van-cell
                wx:for="{{ reserveList }}"
                wx:key="index"
                value-class="value-class"
                clickable
                data-index="{{ index }}"
                bind:click="toggle3"
              >
              <view slot="title">
                <!-- <view class="van-cell-text">单元格</view> -->
                <view class="date">{{item.time}}</view>
                <view class="numBox">
                  <view class="price">￥{{item.price}}</view>
                  <view><text>surplus:</text>{{item.nightNums}}</view>
                  <view><text>total:</text>{{item.night}}</view>
                </view>
              </view>
                <van-checkbox
                  catch:tap="noop"
                  class="checkboxesThree-{{ index }}"
                  name="{{ index }}"
                  disabled="{{item.nightNums==0}}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </van-tab>
    </van-tabs>

    
  </view>
  <view class="paywayBox">
    <view class="bigTitle">select payment method</view>
    <view class="paywayList">
      <van-radio-group value="{{ radio }}" bind:change="onChange">
        <van-cell-group>
          <van-cell clickable data-name="1" bind:click="onClick">
            <view slot="title">
              <view class="bankNum">
                <text>bank</text>
                <van-field
                  model:value="{{ bankNum }}"
                  type="number"
                  placeholder="please enter bank number"
                  border="{{ false }}"
                  class="bankNumInput"
                />
              </view>
            </view>
            <van-radio slot="right-icon" name="1" />
          </van-cell>
          <van-cell title="cash" clickable data-name="2" bind:click="onClick">
            <van-radio slot="right-icon" name="2" />
          </van-cell>
          <van-cell title="weChat" clickable data-name="3" bind:click="onClick">
            <van-radio slot="right-icon" name="3" />
          </van-cell>
        </van-cell-group>
      </van-radio-group>
    </view>
  </view>
  <van-submit-bar
    price="{{ price }}"
    button-text="pay order"
    label="total:"
    bind:submit="payOrder"
    tip="{{ true }}"
  >
    <van-tag type="primary">quantity:{{quantity}}</van-tag>
    <view slot="tip">Book two or more with 20% discount</view>
  </van-submit-bar>
  <van-dialog id="van-dialog" />
</view>